    <TextView
        android:id="@+id/tv_quantity"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#BDBDBD"
        android:text="Default"
